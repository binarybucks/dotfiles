# color support for tmux
  alias tmux="tmux -2"

# prolog
alias pl="swipl"

# vi
  alias vi='vim'

# cd
  alias ..='cd ..'

# grep 
  alias egrep='egrep --color'
  alias grep='grep --color'

# process grep
  alias pg='ps -ef | grep -v grep | grep'

# ls
  alias ll="ls -l"
  alias la='ls -la'

#pacman 
alias pinstall='pacman -Syu '
alias premove='pacman -Rsnc '
alias psearch='pacman -Ss '
alias premoveunused='pacman -Rsn $(pacman -Qqdt)'

#git

  alias g='git'
  alias gst='git status --ignore-submodules'
  compdef _git gst=git-status

  alias gpl='git pull'
  compdef _git gpl=git-pull

  alias gps='git push origin'
  compdef _git gps=git-push

  alias gcm='git commit -S -a -m'
  alias gc='git commit -S -m'
  compdef _git gc=git-commit

  alias ga='git add '
  compdef _git ga=git-add

  alias gco='git checkout'
  compdef _git gco=git-checkout

  alias gb='git branch -a'
  compdef _git gb=git-branch

  alias gl='git log --show-signature'
  compdef _git gl=git-log

#bc
  alias calc="bc"

# reload zsh settings
  alias reload='. ~/.zshrc'

# systemd journal follow
alias jf='journalctl -n 200 -f'

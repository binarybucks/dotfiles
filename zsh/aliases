# color support for tmux
alias tmux="tmux -2"

# su
alias su='sudo -s'

# vi
alias vi='vim'

# cd
alias ..='cd ..'

# grep 
alias egrep='egrep --color'
alias grep='grep --color'

# process grep
alias pg='ps -ef | grep -v grep | grep'

# ls
alias ll="ls -l"
alias la='ls -la'

#pacman 
alias install='sudo pacman -Syu '
alias remove='sudo pacman -Rsnc '
alias search='pacman -Ss '

# reload zsh settings
alias reload='. ~/.zshrc'
